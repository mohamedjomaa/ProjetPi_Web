{% extends "avis/base_back_avis.html.twig" %}
{% block back_content %}

    <h1>Category </h1>

    <form action="{{ path('category_new') }}">
        <input type="submit" class="btn btn-primary" value="Create Category"/>
    </form>

    <table class="table">
        <thead>
            <tr>

                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>


            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>

                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.content }}</td>
                <td>

                    <form action="{{ path('category_show',{'id': category.id})}}">
                        <input type="submit" class="btn btn-info" value="show"/>
                    </form>

                    <form action="{{ path('category_edit',{'id': category.id})}}">
                        <input type="submit" class="btn btn-info" value="edit"/>
                    </form>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




{% endblock %}

{% block back_footer %}

{% endblock %}
